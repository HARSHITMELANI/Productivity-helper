{
  "manifest_version": 3,
  "name": "Productivity Helper",
  "version": "1.0",
  "description": "Active time, screenshots, auto-translate Indian languages",
  "permissions": [
    "storage",
    "tabs",
    "downloads",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "128": "icons/icon.png"
  }
}
